<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TaskMaster" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Texto -->
        <item name="android:textColor">@color/colorTextPrimary</item>

        <!-- Botones -->
        <item name="materialButtonStyle">@style/PastelButton</item>
    </style>

    <style name="PastelButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>
